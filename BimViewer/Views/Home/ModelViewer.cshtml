
@{
    ViewBag.Title = "ModelViewer";
}
<style>
    .floatRight{
        float:right;
    }
</style>

<h2>@ViewBag.Message</h2>

<script src="~/Scripts/xbim-viewer.debug.bundle.js" type="text/javascript"></script>


<div id="content">
    <canvas id="viewer" width="800" height="800"></canvas>
    <script type="text/javascript">
        var viewer = new xViewer('viewer');
        viewer.load('/Resources/Data/SampleHouse.wexbim');
        viewer.start();
  

        function setNavigationModeFly() {
            viewer.navigationMode = 'fly';
        }
        function setNavigationModeOrbit() {
            viewer.navigationMode = 'orbit';
        }
    </script>

</div>

<div class="floatRight">
    <input type="button" value="Fly" onclick="setNavigationModeFly()"/>
    <input type="button" value="Orbit" onclick="setNavigationModeOrbit()" />
</div>    